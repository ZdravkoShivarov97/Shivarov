<body>

    <h1>–¢–µ—Å—Ç –ø–æ –º–∞—Ç–µ–º–∞—Ç–∏–∫–∞: –¶–µ–ª–∏ –∏–∑—Ä–∞–∑–∏</h1>
    <div id="score">–ë—Ä–æ–π —Ç–æ—á–∫–∏: 0</div>
    <div id="question" class="question"></div>
    <div id="answers"></div>
    <button id="nextButton" style="display: none;">–°–ª–µ–¥–≤–∞—â–∞ –∑–∞–¥–∞—á–∞</button>
    <button id="endButton" style="display: none;">–ö—Ä–∞–π</button>

    <script>
        const questions = [
            {
                question: "–ö–∞–∫–≤–æ –µ (2x + 3)(x - 1)?",
                answers: [
                    { text: "2x^2 + 3x - 2", correct: false },
                    { text: "2x^2 + x - 3", correct: true },
                    { text: "2x^2 - 3x + 3", correct: false }
                ]
            },
            {
                question: "–ö–∞–∫–≤–æ –µ (x + 2)^2?",
                answers: [
                    { text: "x^2 + 4", correct: false },
                    { text: "x^2 + 4x + 4", correct: true },
                    { text: "x^2 - 4", correct: false }
                ]
            },
            // –î–æ–±–∞–≤–∏ –æ—â–µ 8 –≤—ä–ø—Ä–æ—Å–∞ —Ç—É–∫...
        ];

        let currentQuestionIndex = 0;
        let score = 0;

        function showQuestion() {
            const currentQuestion = questions[currentQuestionIndex];
            document.getElementById('question').innerText = currentQuestion.question;
            const answersDiv = document.getElementById('answers');
            answersDiv.innerHTML = '';

            currentQuestion.answers.forEach(answer => {
                const button = document.createElement('div');
                button.innerText = answer.text;
                button.classList.add('answer');
                button.onclick = () => selectAnswer(answer);
                answersDiv.appendChild(button);
            });

            document.getElementById('nextButton').style.display = 'none';
            document.getElementById('endButton').style.display = 'none';
        }

        function selectAnswer(answer) {
            const answersDiv = document.getElementById('answers');
            const answerButtons = answersDiv.getElementsByClassName('answer');

            for (let button of answerButtons) {
                button.onclick = null; // –î–µ–∞–∫—Ç–∏–≤–∏—Ä–∞–π –≤—Å–∏—á–∫–∏ –±—É—Ç–æ–Ω–∏
            }

            if (answer.correct) {
                score += 2;
                answersDiv.querySelectorAll('.answer')[currentQuestionIndex].classList.add('correct');
            } else {
                answersDiv.querySelectorAll('.answer')[currentQuestionIndex].classList.add('incorrect');
            }

            document.getElementById('score').innerText = `–ë—Ä–æ–π —Ç–æ—á–∫–∏: ${score}`;
            document.getElementById('nextButton').style.display = 'inline';
            if (currentQuestionIndex === questions.length - 1) {
                document.getElementById('nextButton').style.display = 'none';
                document.getElementById('endButton').style.display = 'inline';
            }
        }

        document.getElementById('nextButton').onclick = () => {
            currentQuestionIndex++;
            if (currentQuestionIndex < questions.length) {
                showQuestion();
            }
        };

        document.getElementById('endButton').onclick = () => {
            document.body.innerHTML = `<h1>–û–±—â –±—Ä–æ–π —Ç–æ—á–∫–∏: ${score}</h1>`;
            if (score < 10) {
                document.body.innerHTML += '<p>üòû –û–ø–∏—Ç–∞–π –ø–∞–∫!</p>';
            } else if (score < 16) {
                document.body.innerHTML += '<p>üòê –ú–æ–∂–µ—à –¥–∞ —Å–µ —Å–ø—Ä–∞–≤–∏—à –ø–æ-–¥–æ–±—Ä–µ, –≤—è—Ä–≤–∞–º –≤ —Ç–µ–±!</p>';
            } else {
                document.body.innerHTML += '<p>üòÄ –ë–†–ê–í–û, —Å–ø—Ä–∞–≤—è—à —Å–µ —á—É–¥–µ—Å–Ω–æ!</p>';
            }
        };

        showQuestion();
    </script>
</body>
